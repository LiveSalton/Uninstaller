<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/dialog_content_text_size"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/app_exit_dialog_type_share"
        android:lineSpacingExtra="2dp"/>
    <TextView
        android:textSize="@dimen/dialog_hint_text_size"
        android:textColor="@color/grey"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/hint"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/common_hint"
        android:lineSpacingExtra="2dp"/>
    <CheckBox
        android:textSize="@dimen/dialog_hint_text_size"
        android:textColor="@color/grey"
        android:id="@+id/no_remind"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:button="@drawable/selector_checkbox_drawable"
        android:text="@string/common_on_remind"
        android:drawablePadding="0dp"/>
</LinearLayout>
