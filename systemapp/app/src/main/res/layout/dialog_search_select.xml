<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_width="300dp"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/dialog_title_text_size"
        android:textColor="@color/actionbar_title_color"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_select_dialog_title"/>
    <include layout="@layout/view_dialog_divider_horizontal"/>
    <ScrollView
        android:scrollbarStyle="outsideOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="@dimen/dialog_button_text_size"
                android:textColor="@color/white"
                android:id="@+id/search_apk_name"
                android:background="@drawable/selector_btn_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_select_dialog_apk_name"/>
            <Button
                android:textSize="@dimen/dialog_button_text_size"
                android:textColor="@color/white"
                android:id="@+id/search_package_name"
                android:background="@drawable/selector_btn_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_select_dialog_package_name"/>
            <Button
                android:textSize="@dimen/dialog_button_text_size"
                android:textColor="@color/white"
                android:id="@+id/search_app_name"
                android:background="@drawable/selector_btn_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_select_dialog_app_name"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
