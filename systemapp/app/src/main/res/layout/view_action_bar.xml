<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/action_container"
        android:background="@color/actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">
        <ImageButton
            android:id="@+id/left"
            android:layout_width="@dimen/actionbar_left_button_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_back"
            android:scaleType="center"
            android:contentDescription="@string/common_hint"
            style="@style/ActionBarLeftItem"/>
        <FrameLayout
            android:paddingRight="6dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/action_bar_text_size"
                android:textColor="@color/actionbar_title_color"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:singleLine="true"/>
            <EditText
                android:textSize="@dimen/action_bar_edit_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/edit_text"
                android:paddingRight="6dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:inputType="textNoSuggestions"/>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/actionbar_shadow"
        android:scaleType="fitXY"
        android:contentDescription="@string/common_hint"/>
</LinearLayout>
